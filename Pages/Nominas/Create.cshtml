@{
    ViewData["Tittle"] = "Create";
}

<h1>Create</h1>

<h4>Nomina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nomina.PeriodoInicio" class="control-label"></label>
                <input asp-for="Nomina.PeriodoInicio" class="form-control" />
                <span asp-validation-for="Nomina.PeriodoInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nomina.PeriodoFin" class="control-label"></label>
                <input asp-for="Nomina.PeriodoFin" class="form-control" />
                <span asp-validation-for="Nomina.PeriodoFin" class="text-danger"></span>
