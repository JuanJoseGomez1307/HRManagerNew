@page
@model HRManagerNew.Pages.Beneficios.EditModel
@{
    ViewData["Tittle"] = "Edit";
}
<h1>Edit</h1>

<h4>Beneficio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
